<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Shadow effect -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0000000"/> <!-- Shadow color (black with transparency) -->
            <corners android:radius="8dp"/> <!-- Same rounded corners -->
        </shape>
    </item>
</layer-list>
